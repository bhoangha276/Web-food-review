@model FoodReviewWeb.Models.Framework.Comment

<div class="col-lg-12">
    <div class="sidebar-item submit-comment">
        <div class="sidebar-heading">
            <h2>Your comment</h2>
        </div>
        <div class="content">
            @*<form id="comment" action="#" method="post">*@
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-lg-12">
                        <fieldset>
                            @*<textarea name="message" rows="6" id="message" placeholder="Type your comment" required=""></textarea>*@
                            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @placeholder = "Type your id" } })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })

                            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @placeholder = "Type your id"@*, @readonly = "readonly"*@ } })
                            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })

                            @Html.EditorFor(model => model.PostID, new { htmlAttributes = new { @placeholder = "Type your id"@*, @readonly = "readonly"*@ } })
                            @Html.ValidationMessageFor(model => model.PostID, "", new { @class = "text-danger" })

                            @Html.TextAreaFor(model => model.Contents, new { @placeholder = "Type your comment" })
                            @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })

                        </fieldset>
                    </div>
                    <div class="col-lg-12">
                        <fieldset>
                            <button type="submit" id="form-submit" class="main-button">Submit</button>
                        </fieldset>
                    </div>
                </div>
            }

            @*</form>*@
        </div>
    </div>
</div>