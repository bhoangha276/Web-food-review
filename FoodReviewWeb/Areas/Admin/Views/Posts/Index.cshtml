@model IEnumerable<FoodReviewWeb.Models.Framework.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Post</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <p>@Html.ActionLink("Create New", "Create")</p>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        @*<th>@Html.DisplayNameFor(model => model.ID)</th>*@
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Contents)</th>
                        <th>@Html.DisplayNameFor(model => model.Image)</th>
                        <th>@Html.DisplayNameFor(model => model.Slug)</th>
                        <th>@Html.DisplayNameFor(model => model.LikeCount)</th>
                        <th>@Html.DisplayNameFor(model => model.CreateAt)</th>
                        <th>@Html.DisplayNameFor(model => model.UpdateAt)</th>
                        <th>@Html.DisplayNameFor(model => model.Account.Username)</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        @*<th>@Html.DisplayNameFor(model => model.ID)</th>*@
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Contents)</th>
                        <th>@Html.DisplayNameFor(model => model.Image)</th>
                        <th>@Html.DisplayNameFor(model => model.Slug)</th>
                        <th>@Html.DisplayNameFor(model => model.LikeCount)</th>
                        <th>@Html.DisplayNameFor(model => model.CreateAt)</th>
                        <th>@Html.DisplayNameFor(model => model.UpdateAt)</th>
                        <th>@Html.DisplayNameFor(model => model.Account.Username)</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contents)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Image)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Slug)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LikeCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdateAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account.Username)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                @Html.ActionLink("Details", "Details", new { id = item.ID })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- /.container-fluid -->
